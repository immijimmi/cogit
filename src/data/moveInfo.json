{
    "Nf3": {
        "title": "RÃ©ti Opening",
        "description": [
            "White ",
            {
                "type": "glossary_button",
                "text": "develops",
                "value": "development"
            },
            " the kingside knight, exerting ",
            {
                "type": "glossary_button",
